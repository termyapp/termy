{
  "name": "termy-electron",
  "private": true,
  "version": "0.2.0",
  "main": "build/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/termyapp/Termy"
  },
  "author": "Marton Langa martonlanga+termy@gmail.com (https://martonlanga.com/)",
  "description": "A new kind of terminal for web developers",
  "scripts": {
    "dev": "wait-on http://localhost:4242 && cross-env NODE_ENV=development webpack --watch",
    "build-webpack": "rm ../app/public/*.node; cross-env NODE_ENV=production webpack",
    "build": "electron-builder",
    "release": "GH_TOKEN= electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Termy",
    "appId": "app.termy",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png"
    },
    "files": [
      "build/**/*"
    ],
    "extraFiles": {
      "from": "../external/tldr/pages",
      "to": "tldr"
    }
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "copy-webpack-plugin": "^6.3.1",
    "cross-env": "^7.0.2",
    "electron": "8.5.3",
    "electron-builder": "^22.9.1",
    "electron-debug": "^3.1.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^1.2.0",
    "fix-path": "^3.0.0",
    "node-loader": "^1.0.2",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-electron-reload": "^1.0.1",
    "electron-context-menu": "^2.4.0"
  }
}
