{
  "name": "@termy/electron",
  "version": "0.0.1",
  "private": true,
  "main": "build/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/termyapp/Termy"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --watch",
    "build-webpack": "cross-env NODE_ENV=production webpack",
    "build": "electron-builder",
    "release": "GH_TOKEN= electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Termy",
    "appId": "app.termy",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.png",
      "hardenedRuntime": true
    },
    "files": [
      "build/**/*"
    ],
    "extraFiles": {
      "from": "../../external/tldr/pages",
      "to": "tldr"
    }
  },
  "devDependencies": {
    "@termy/native": "^0.0.1",
    "@types/electron-localshortcut": "^3.1.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.2",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-context-menu": "^2.4.0",
    "electron-devtools-installer": "git+https://github.com/MarshallOfSound/electron-devtools-installer.git",
    "electron-is-dev": "^1.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-notarize": "^1.0.0",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.9",
    "fix-path": "^3.0.0",
    "node-loader": "^1.0.2",
    "request": "^2.88.2",
    "spawn-sync": "^2.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0",
    "webpack": "^5.24.0",
    "webpack-cli": "^4.2.0",
    "webpack-electron-reload": "^1.0.1"
  }
}
