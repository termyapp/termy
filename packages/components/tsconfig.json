{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react"
  },
  "include": ["src", "stitches.config.ts", "index.ts"],
  "exclude": ["node_modules", "lib"]
}
